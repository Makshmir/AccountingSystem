@model AccountingSystem.Models.Notification

@{
    ViewData["Title"] = "Delete Notification";
}

<h1>Delete Notification</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <h3>Are you sure you want to delete this notification?</h3>
        <dl class="dl-horizontal">
            <dt>Event Name</dt>
            <dd>@Model.EventName</dd>
            <dt>Event Date</dt>
            <dd>@Model.EventDate.ToShortDateString()</dd>
            <dt>Categories</dt>
            <dd>@string.Join(", ", Model.Categories)</dd>
            <dt>Message</dt>
            <dd>@Model.Message</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись</a>
</div>
