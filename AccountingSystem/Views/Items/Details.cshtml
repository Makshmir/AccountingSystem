@model AccountingSystem.Models.Item


@{
    ViewData["Title"] = "Details";
}

<h1>Цінник</h1>


    <hr />
    <dl class="price_row">

        <div class="element_row">
            <dt class="col-sm-2">
                <h5>@Html.DisplayNameFor(model => model.Name)</h5>
            </dt>
            <dd class="col-sm-4">
                <h4 class="h3_name">@Html.DisplayFor(model => model.Name)</h4>
            </dd>
        </div>


    <div class="element_row">

        <dd class="col-sm-10">
            @{
                if (Model.Discount != 0)
                {
                    <s>@Html.DisplayFor(model => model.Price) грн</s>

                }
            
                
            }
            
            
            <h2>@Html.DisplayFor(model => model.DiscountedPrice)</h2>
            <h4>грн</h4>
        </dd>
    </div>
        
        @{
            IronBarCode.GeneratedBarcode myBarcode = IronBarCode.BarcodeWriter.CreateBarcode(Model.Barcode, IronBarCode.BarcodeEncoding.Code128);
            myBarcode.ResizeTo(350, 60);
            myBarcode.SetMargins(5, 5, 5, 5);
            string DataURL = myBarcode.ToDataUrl();


        }
        @{

        }
        <img src="@DataURL" />
        <br />
        <img src="/images/print.png" width="32px" height="32px">


    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Повернутись</a>
</div>