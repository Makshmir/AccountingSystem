@model AccountingSystem.Models.Supply

@{
    ViewData["Title"] = "Delete Supply";
}

<h1>Delete Supply</h1>

<h3>Are you sure you want to delete this supply?</h3>
<div>
    <h4>Supply</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Supplier
        </dt>
        <dd class="col-sm-10">
            @ViewBag.SupplierName
        </dd>
        <dt class="col-sm-2">
            Supply Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplyDate)
        </dd>
        <dt class="col-sm-2">
            Total Amount
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
    </dl>

    <h4>Items</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Purchase Price</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    
                    <td>@item.Quantity</td>
                    <td>@item.PurchasePrice</td>
                    <td>@item.TotalPrice</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
