@model AccountingSystem.Models.Supply

@{
    ViewData["Title"] = "Delete Supply";
}

<h1>Видалити постачання</h1>

<h3>Ви впевнені, що хочете видалити це постачання?</h3>
<div class="delete-container">
    <h4>Постачання</h4>
    <hr />
    <dl class="details-list">

        <dt class="details-label">
            Дата постачання
        </dt>
        <dd class="details-value">
            @Html.DisplayFor(model => model.SupplyDate)
        </dd>
        <dt class="details-label">
            Загальна сума
        </dt>
        <dd class="details-value">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
    </dl>

    <h4>Товари</h4>
    <table class="table">
        <thead>
            <tr>
                <th>ID товару</th>
                <th>Кількість</th>
                <th>Ціна закупівлі</th>
                <th>Загальна ціна</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ItemId</td>
                    <td>@item.Quantity</td>
                    <td>@item.PurchasePrice</td>
                    <td>@item.TotalPrice</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form asp-action="DeleteConfirmed" method="post" class="delete-form">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Повернутись</a>
    </div>
</form>
